/**
 * 猫咪召唤器 - 首页样式
 */

/* ===== 容器 ===== */
.container {
  min-height: 100vh;
  padding-bottom: 200rpx;
  background: linear-gradient(180deg, #FFF5E6 0%, #FFE8CC 100%);
}

/* ===== 顶部区域 ===== */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0 20rpx;
}

.header-icon {
  font-size: 72rpx;
  margin-bottom: 8rpx;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
}

.header-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #FF6B35;
  letter-spacing: 4rpx;
}

.header-subtitle {
  font-size: 24rpx;
  color: #B8956A;
  margin-top: 6rpx;
}

/* ===== 分类标签栏 ===== */
.category-tabs {
  display: flex;
  justify-content: space-around;
  padding: 16rpx 20rpx;
  margin: 10rpx 24rpx 20rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 140, 66, 0.15);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.tab-item.tab-active {
  background: linear-gradient(135deg, #FF8C42, #FF6B35);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.4);
}

.tab-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.tab-name {
  font-size: 22rpx;
  color: #666;
  white-space: nowrap;
}

.tab-active .tab-name {
  color: #FFFFFF;
  font-weight: bold;
}

/* ===== 按钮网格 ===== */
.button-grid {
  display: flex;
  flex-wrap: wrap;
  padding: 0 16rpx;
  justify-content: flex-start;
}

.sound-btn {
  width: calc(25% - 16rpx);
  margin: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 8rpx 16rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
  position: relative;
  overflow: hidden;
}

.sound-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #FFD59E, #FF8C42);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.sound-btn-playing::before {
  opacity: 1;
}

/* 点击缩放动画 */
.sound-btn-tap {
  animation: tapScale 0.3s ease;
}

@keyframes tapScale {
  0% { transform: scale(1); }
  50% { transform: scale(0.9); }
  100% { transform: scale(1); }
}

/* 播放中状态 */
.sound-btn-playing {
  background: linear-gradient(135deg, #FFF5E6, #FFE8CC);
  box-shadow: 0 4rpx 20rpx rgba(255, 140, 66, 0.3);
}

.btn-icon-wrap {
  position: relative;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
}

.btn-icon {
  font-size: 48rpx;
  z-index: 1;
}

/* 播放中波纹动画 */
.playing-indicator {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wave {
  position: absolute;
  border-radius: 50%;
  border: 2rpx solid #FF8C42;
  opacity: 0;
  animation: waveAnim 1.5s ease-out infinite;
}

.wave1 {
  width: 60rpx;
  height: 60rpx;
  animation-delay: 0s;
}

.wave2 {
  width: 80rpx;
  height: 80rpx;
  animation-delay: 0.3s;
}

.wave3 {
  width: 100rpx;
  height: 100rpx;
  animation-delay: 0.6s;
}

@keyframes waveAnim {
  0% {
    opacity: 0.6;
    transform: scale(0.5);
  }
  100% {
    opacity: 0;
    transform: scale(1.2);
  }
}

.btn-name {
  font-size: 20rpx;
  color: #555;
  text-align: center;
  line-height: 1.3;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.sound-btn-playing .btn-name {
  color: #FF6B35;
  font-weight: bold;
}

/* 收藏标记 */
.fav-mark {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  font-size: 18rpx;
}

/* ===== 底部控制区 ===== */
.control-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #FFFFFF;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  border-radius: 30rpx 30rpx 0 0;
  z-index: 100;
}

.control-btn {
  display: flex;
  align-items: center;
  padding: 14rpx 28rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #FF8C42, #FF6B35);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.4);
  margin-right: 24rpx;
  flex-shrink: 0;
}

.control-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.control-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.control-text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: bold;
  white-space: nowrap;
}

.volume-control {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.volume-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.volume-slider {
  flex: 1;
  margin: 0;
}

/* ===== 浮动按钮 ===== */
.float-btns {
  position: fixed;
  right: 24rpx;
  bottom: 200rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  z-index: 99;
}

.float-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
  font-size: 36rpx;
  transition: all 0.3s ease;
}

.float-btn:active {
  transform: scale(0.9);
}

.float-btn-active {
  background: linear-gradient(135deg, #FF8C42, #FF6B35);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.5);
}

/* ===== 侧边面板 ===== */
.side-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 200;
}

.panel-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.panel-content {
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  width: 580rpx;
  background: #FFFFFF;
  border-radius: 30rpx 0 0 30rpx;
  padding: 40rpx 30rpx;
  animation: slideIn 0.3s ease;
  overflow-y: auto;
}

@keyframes slideIn {
  from { transform: translateX(100%); }
  to { transform: translateX(0); }
}

.panel-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0E6D8;
}

.panel-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B35;
}

.panel-close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #F5F0EB;
  font-size: 28rpx;
  color: #999;
}

.panel-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.panel-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #FFF9F2;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.panel-item:active {
  background: #FFE8CC;
  transform: scale(0.98);
}

.panel-item-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.panel-item-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.panel-item-desc {
  font-size: 22rpx;
  color: #999;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.panel-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #B8956A;
}

/* ===== 长按提示弹窗 ===== */
.tooltip {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 300;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tooltip-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}

.tooltip-content {
  position: relative;
  width: 500rpx;
  background: #FFFFFF;
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: popIn 0.3s ease;
  z-index: 1;
}

@keyframes popIn {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.tooltip-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.tooltip-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.tooltip-desc {
  font-size: 26rpx;
  color: #888;
  margin-bottom: 36rpx;
}

.tooltip-actions {
  display: flex;
  gap: 24rpx;
  width: 100%;
}

.tooltip-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx 0;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #FFE8CC, #FFD59E);
  font-size: 26rpx;
  color: #FF6B35;
  font-weight: bold;
  transition: all 0.2s ease;
}

.tooltip-btn:active {
  transform: scale(0.95);
  opacity: 0.8;
}
